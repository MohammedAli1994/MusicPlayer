<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ede9e8e8">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        tools:context="example.com.musictube.LoginActivity">

        <ImageView
            android:id="@+id/activity_profile_image_view"
            android:layout_width="@dimen/img_width_height"
            android:layout_height="@dimen/img_width_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mal4" />

        <TextView
            android:id="@+id/activity_change_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/activity_profile_image_view"
            android:layout_alignRight="@id/activity_profile_image_view"
            android:layout_below="@id/activity_profile_image_view"

            android:textAlignment="center"
            android:textColor="#e0c1bfbf"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/activity_change_frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activity_change_text_view"
            android:layout_alignLeft="@id/activity_profile_image_view"
            android:layout_alignRight="@id/activity_profile_image_view"
            android:layout_alignTop="@id/activity_profile_image_view"
            android:alpha="0"
            android:background="#00f" />


        <EditText
            android:id="@+id/activity_profile_first_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Name:"
            android:textColorHint="#581e1e1e"
            android:inputType="textPersonName"
            android:textStyle="italic"
            android:layout_below="@id/activity_change_frame_layout"
            android:drawableLeft="@drawable/user"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/activity_profile_last_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_profile_first_name_edit_text"
            android:hint="password:"
            android:textSize="25dp"
            android:textColorHint="#38000000"
            android:inputType="textPassword"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawableTint="@android:color/black"
            android:textStyle="bold|italic"/>



        <Button
            android:id="@+id/activity_Login_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_last_name_edit_text"
            android:text="Login"
            android:textColor="#c2c1c1"
            android:textSize="20dp"
            android:background="#39000000"
            android:textStyle="bold|italic"/>


    </RelativeLayout>

</ScrollView>
